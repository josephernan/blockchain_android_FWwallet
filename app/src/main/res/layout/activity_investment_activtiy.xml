<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.ivan.fgwallet.InvestmentActivtiy">

    <include layout="@layout/tootlbar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Amount"

        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="30dp"
        android:textColor="@android:color/white"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:background="@android:color/white"
        android:id="@+id/spn"
        ></Spinner>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_btc"
        android:text="Invest"
        android:textSize="17dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/invest"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/border_white_with_body"
        />

</LinearLayout>
